<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_nav_drawer_btn_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFICATION" />

        <Button
            android:id="@+id/activity_nav_drawer_btn_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOUND" />

        <Button
            android:id="@+id/activity_nav_drawer_btn_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANIMATION" />

        <Button
            android:id="@+id/activity_nav_drawer_btn_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COUNTER" />

        <TextView
            android:id="@+id/activity_nav_drawer_et_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--:--"/>

    </LinearLayout>

    <!-- The navigation drawer list-->
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:src="@drawable/cage"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>